<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/airbnb_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nihardalal.kidlocator.Activities.AgeActivity">

    <TextView
        android:id="@+id/ages_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Ages"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/age_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ages_text">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="1 Year"
                android:textColor="#FFF"
                android:id="@+id/check1"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="2 Years"
                android:textColor="#FFF"
                android:id="@+id/check2"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="3 Years"
                android:textColor="#FFF"
                android:id="@+id/check3"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Years"
                android:textColor="#FFF"
                android:id="@+id/check4"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="5 Years"
                android:textColor="#FFF"
                android:id="@+id/check5"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="6 Years"
                android:textColor="#FFF"
                android:id="@+id/check6"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="7 Years"
                android:textColor="#FFF"
                android:id="@+id/check7"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 Years"
                android:textColor="#FFF"
                android:id="@+id/check8"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="9 Years"
                android:textColor="#FFF"
                android:id="@+id/check9"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="10 Years"
                android:textColor="#FFF"
                android:id="@+id/check10"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:text="11 Years"
                android:textColor="#FFF"
                android:id="@+id/check11"/>

            <CheckBox
                style="@style/AgeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Years"
                android:textColor="#FFF"
                android:id="@+id/check12"/>
        </TableRow>
    </TableLayout>
    <CheckBox
        android:background="@drawable/all_age_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Ages"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/hoop_yellow"
        android:layout_below="@+id/age_table"
        android:checked="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/all_ages"/>
</RelativeLayout>
